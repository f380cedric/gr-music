<?xml version="1.0"?>
<block>
  <name>music_v2_cpp_cf</name>
  <key>music_v2_music_v2_cpp_cf</key>
  <category>[music_v2]</category>
  <import>import music_v2</import>
  <make>music_v2.music_v2_cpp_cf($numAnt, $numSamp, $numSrc, $distance, $freq)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Nr of antennas</name>
    <key>numAnt</key>
    <type>int</type>
  </param>

  <param>
    <name>Nr of samples</name>
    <key>numSamp</key>
    <type>int</type>
  </param>

  <param>
  <name>Nr of sources</name>
    <key>numSrc</key>
    <type>int</type>
  </param>

  <param>
  <name>Distance</name>
    <key>distance</key>
    <type>float</type>
  </param>

  <param>
  <name>Frequency [MHz]</name>
    <key>freq</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <nports>$numAnt</nports>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
